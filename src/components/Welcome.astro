<!-- Theme switcher script with improved functionality -->
<script>
  // Listen for clicks on theme buttons and update theme with visual feedback
  document.querySelectorAll('.theme-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const selectedTheme = btn.getAttribute('data-theme');
      
      // Add brief visual feedback when clicking a theme button
      btn.classList.add('scale-95', 'opacity-80');
      setTimeout(() => {
        btn.classList.remove('scale-95', 'opacity-80');
      }, 150);
      
      // Remove existing theme-* classes
      document.documentElement.classList.forEach(cls => {
        if (cls.startsWith('theme-')) {
          document.documentElement.classList.remove(cls);
        }
      });
      
      // Add the new theme class
      document.documentElement.classList.add(`theme-${selectedTheme}`);
      
      // Update dark mode based on themes that use dark text
      if (selectedTheme && ['dark', 'chainsaw', 'gojo'].includes(selectedTheme)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
      
      // Save the selected theme in localStorage
      if (selectedTheme) {
        localStorage.setItem('theme', selectedTheme);
      }
      
      // Mark the selected theme button
      document.querySelectorAll('.theme-btn').forEach(otherBtn => {
        otherBtn.classList.remove('ring-2', 'ring-offset-2');
        
        if (otherBtn === btn) {
          otherBtn.classList.add('ring-2', 'ring-offset-2');
        }
      });
    });
  });
  
  // Set the initial active state based on the current theme
  document.addEventListener('DOMContentLoaded', () => {
    const currentTheme = localStorage.getItem('theme') || 'light';
    const activeThemeBtn = document.querySelector(`.theme-btn[data-theme="${currentTheme}"]`);
    
    if (activeThemeBtn) {
      activeThemeBtn.classList.add('ring-2', 'ring-offset-2');
    }
  });
</script>

<style>
  /* Add shimmer animation to the title */
  @keyframes shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }
  
  .animate-shimmer {
    animation: shimmer 8s linear infinite;
    background-size: 200% auto;
  }
</style>
